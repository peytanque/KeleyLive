{% extends "MainBundle::layout.html.twig" %}

{% block body %}
    <h1>Détail Groupe</h1>

    <table  class="table table-hover">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ groupe.nom }}</td>
            </tr>
        </tbody>
    </table>

    <p><a href="{{ path('groups_index') }}" class="btn btn-default">Retour à la liste</a></p>

        <p><a href="{{ path('groups_edit', { 'id': groupe.id }) }}" class="btn btn-warning">Modifier</a></p>
        <p>
            {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer" class="btn btn-danger">
            {{ form_end(delete_form) }}
        </p>
{% endblock %}
